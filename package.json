{
  "name": "edgedoc",
  "version": "1.0.0",
  "description": "Edge-based documentation validation and sync tool (CLI + MCP)",
  "type": "module",
  "bin": {
    "edgedoc": "./dist/cli.js"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "dev:mcp": "bun run src/index.ts",
    "build": "bun build src/cli.ts --outdir dist --target bun",
    "build:mcp": "bun build src/index.ts --outdir dist --target bun",
    "build:binary": "bun build src/cli.ts --compile --outfile mdoc",
    "test": "bun test"
  },
  "keywords": [
    "documentation",
    "validation",
    "markdown",
    "lint",
    "cli",
    "mcp",
    "migration",
    "sync"
  ],
  "author": "astralclover",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/astralclover/edgedoc.git"
  },
  "homepage": "https://github.com/astralclover/edgedoc#readme",
  "bugs": {
    "url": "https://github.com/astralclover/edgedoc/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "commander": "^12.1.0",
    "tree-sitter": "^0.25.0",
    "tree-sitter-markdown": "^0.7.1",
    "tree-sitter-typescript": "^0.23.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.2"
  },
  "trustedDependencies": [
    "tree-sitter",
    "tree-sitter-javascript",
    "tree-sitter-markdown",
    "tree-sitter-typescript"
  ]
}
